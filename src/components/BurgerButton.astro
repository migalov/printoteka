<style lang="scss">
.bar1, .bar2, .bar3 {
  width: 18px;
  height: 2px;
  background-color: #333;
  margin: 4px 0;
  transition: 0.4s;
}

.change .bar1 {
  transform: translate(0, 5px) rotate(-45deg);
}

.change .bar2 {opacity: 0;}

.change .bar3 {
  transform: translate(0, -7px) rotate(45deg);
}

.print-toggle-menu {
  cursor: pointer;
}

.print-toggle-menu:hover :is(.bar1, .bar2, .bar3) {
  background-color: var(--pxp-action-main);
}


.print-toggle-menu.print-button {

  padding: .5rem;
}
</style>

<div class="print-toggle-menu print-button print-button--secondary print-button--small" onclick="myFunction(this)">
  <div class="bar1"></div>
  <div class="bar2"></div>
  <div class="bar3"></div>
</div>

<script is:inline>
function myFunction(x) {
  x.classList.toggle("change");
  document.querySelector(".print-header-mobile-menu-block").classList.toggle("open");
}
</script>