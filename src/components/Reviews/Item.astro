---
const {name, account, position, htmlText} = Astro.props;
---

<div class="review-card">
    <div class="user-info">
      <img src="./img/avatar.jpg" alt={name} class="avatar">
      <div class="user-text">
        <div class="user-name-row">
          <strong>{name}</strong>
          <!-- <a href="#" class="profile-link">Открыть профиль</a> -->
        </div>
        <p class="user-role">{position}</p>
      </div>
    </div>
    <div class="review-text" set:html={htmlText}></div>
    <button class="read-more">Читать весь отзыв</button>
  </div>

  <style lang="scss">
    /* Карточка */
    .review-card {
      min-width: 350px; /* Ширина карточки */
      background: #f8f8f8;
      border-radius: 20px;
      padding: 25px;
      display: flex;
      flex-direction: column;
    }

@media (max-width: 480px) {
  .review-card { min-width: 280px; }
}

.user-info { display: flex; gap: 15px; margin-bottom: 15px; }
.avatar { width: 50px; height: 50px; border-radius: 10px; object-fit: cover; }
.profile-link { font-size: 12px; color: #666; background: #eee; padding: 4px 8px; border-radius: 5px; text-decoration: none; }

.review-text {
  font-size: 14px;
  line-height: 1.5;
  color: #333;
  margin-bottom: 20px;
  max-height: calc(3ex + 3em);
  overflow-y: hidden;
}

.read-more {
  width: 100%;
  padding: 12px;
  border: none;
  background: #fff;
  border-radius: 10px;
  cursor: pointer;
  font-weight: bold;
  margin-top: auto;
}



  </style>
