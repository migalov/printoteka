<style lang="scss">
	@use "../styles/media.scss" as *;
	.print-hero {
		display: flex;
		flex-direction: column;
		gap: 1rem;

		max-width: 64rem;
		margin: 4rem auto;
		& p {
			max-width: 20em;
		}
		@include respond(sm) {
			text-align: center;
			align-items: center;
		}
	}
	.print-hero-buttons {
		display: flex;
		flex-direction: column;
		gap: 1em;
		margin: 2.25rem 0 0;
		@include respond(sm) {
			flex-direction: row;
			align-items: center;
		}
	}
	.print-hero-features {
		display: flex;
		flex-direction: column;
		
		margin: 4rem 0 0;
		gap: 1.25em;

		@include respond(sm) {
			flex-direction: row;
			align-items: center;
			gap: 8.25em;
		}

		& li {
			display: inherit;
			flex-direction: row;
			align-items: inherit;
			gap: 1em;
			@include respond(sm) {
				flex-direction: inherit;
			}
			& .print-icon {
				font-size: 1.75em;
				@include respond(sm) {
					font-size: 2.25em;
				}
			}
		}
	}
	.print-statistic {
		display: grid;

		grid-template-areas: "t" "g" "i";
		gap: 2rem;
		& img {
			object-fit: cover;
			border-radius: 1.5rem;
			grid-area: i;
			height: 100%;
		}

		@include respond(sm) {
			grid-template-columns: repeat(2, 1fr);
			grid-template-areas: "t i" "g i";
		}
	}
	.print-statistic-text {
		grid-area: t;
	}
	.print-statistic-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1.5rem;
		grid-area: g;
		& p {
			margin: 2em 0 4em;
		}


	}
</style>

<style lang="scss" is:global>
