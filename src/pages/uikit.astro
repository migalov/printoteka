---
import CircleRadioButton from "../components/CircleRadioButton.astro";
import FeatureParameter from "../components/FeatureParameter.astro";
import Input from "../components/Form/Input.astro";
import RadioBlock from "../components/RadioBlock.astro";
import RadioItem from "../components/RadioItem.astro";
import SVGAnimation from "../components/SVGAnimation.astro";
import Layout from "../layout.astro";
import TableIllustrator from "../../public/img/animation-illustration/1.svg";
import "../styles/illustrator-animation/table.scss";
import Button from "../components/Button.astro";


---
<Layout>



	<style>
		.print-border-radius {
			--radius: 14px;
			background-color: var(--pxp-accent-background);
			height: 28px;
		}
		.print-border-radius-bottom, .print-border-radius-top {
			width: 100%;
			height: 100%;
			background-color: var(--custom-background-page);
			border-radius: 0 0 28px 28px;
		}
		.print-border-radius-bottom {
			border-radius: 0 0 28px 28px;
		}
		.print-border-radius-top {
			border-radius: 28px 28px 0 0;
		}
	</style>
	<div class="container" style="display: flex; flex-direction: column; gap: 1.5rem">
		<TableIllustrator class:list={["print-illustration"]} />
		<div style="display: grid; grid-template-columns: repeat(2, 1fr);">
			<div>
				<FeatureParameter
					value="3-5"
					sub="дней"
					about="Срок печати выпуска"
				/>
			</div>
			<div></div>
		</div>
		<div>
			<h1>Надёжная печать выпускных альбомов</h1>
			<h2>Надёжная печать выпускных альбомов</h2>
			<h3>Надёжная печать выпускных альбомов</h3>
			<h4>Надёжная печать выпускных альбомов</h4>
		</div>
		<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quasi doloremque ad assumenda quia deserunt saepe accusantium dolore quo ipsa labore mollitia, a aperiam nemo molestiae illum at minima dolorum! Dolores!</p>
		<div style="display: flex; align-items: center; gap: 1rem">
			<Button type="primary" size="small">Запартнериться</Button>
			<Button type="primary" size="medium">Запартнериться</Button>
			<Button type="secondary" size="small">Запартнериться</Button>
			<Button type="secondary" size="medium">Запартнериться</Button>
		</div>
		<div style="display: flex; flex-direction: column; gap: 1rem">
			<Input
				name="name"
				placeholder={`Имя и фамилия`}
				label={"Ваше имя и фамилия"}
				id="name"
				required={true}
			/>
			<RadioBlock label="Планируемый объем альбомов в сезон">
				<RadioItem name="almubs" id="1" checked={true} value="Telegram" />
				<RadioItem name="almubs" id="2" value="50-200" />
			</RadioBlock>
		</div>
		</div>
	</div>
	<script src="/src/scripts/animation-vector.js"></script>
</Layout>
